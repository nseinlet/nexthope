<openerp>
	<data>
	
        <record model="ir.ui.view" id="course_tree_view">
            <field name="name">course.tree</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <tree string="Course Tree">
                    <field name="name"/>
                    <field name="responsible_id"/>
                    <field name="nbr_session"/>
                    <field name="responsible_name"/>
                    <field name="message_ids" widget="mail_thread"/>
                </tree>
            </field>
        </record>
        
		<record model="ir.ui.view" id="course_form_view">
            <field name="name">course.form</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="responsible_id"/>
                            <field name="nbr_session" readonly="1"/>
                            <field name="responsible_name"/>
                            <field name="name2"/>
                            <field name="value"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            
                            <page string="Sessions">
                            	<field name="session_ids">
                            		<tree editable="bottom" default_order="sequence">
                            			<field name="sequence" widget="handle" readonly="1"/>
                            			<field name="name"/>
                            			<field name="start_date"/>
                            			<field name="seats"/>
                            			<field name="instructor_id"/>
                            		</tree>
                            	</field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">course.search</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <filter name="my_courses" string="My Courses"
                            domain="[('responsible_id', '=', uid)]"/>
                    <group string="Group By">
                        <filter name="by_responsible" string="Responsible"
                                context="{'group_by': 'responsible_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Kanban -->
        <record model="ir.ui.view" id="view_course_kanban">
            <field name="name">view.course.kanban</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="message_follower_ids"/>
                    <field name="nbr_session"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_semantic_html_override oe_kanban_global_click oe_kanban_card">
                                <div class="oe_kanban_details">
                                    <h4 class="oe_partner_heading"><a type="open"><field name="name"/></a></h4>
                                </div>
								<div class="oe_items_list">
									<field name="nbr_session" widget="gauge" style="width:160px;height: 120px; cursor: pointer;" options="{'max':50}">Sessions</field>
								</div>
								
                                <div class="oe_kanban_footer_left">
                                    <div class="oe_right">
                                        <t t-foreach="record.message_follower_ids.raw_value" t-as="follower">
                                            <img t-att-src="kanban_image('res.partner', 'image', follower)"  width="24" height="24" class="oe_kanban_avatar"/>
                                        </t>
                                    </div>
                                </div>
                                <div class="oe_clear"/>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
	</data>
</openerp>